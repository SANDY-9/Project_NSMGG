<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todayweather">

    <uses-permission android:name="android.permission.INTERNET" />             <!-- 인터넷 접근 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 네트워크 상태 접근 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 제공되는 위치보다 더 정확한 위치 제공 -->
    <uses-permission android:name="android.permission.VIBRATE"/>               <!-- 알림 진동 접근 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>             <!-- 잠금 상태일 때 깨우기 접근 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="날씨 머꼬"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TodayWeather"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.BaseActivity"></activity>
        <activity android:name=".view.main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 푸쉬알림기능 -->
        <service android:name=".push.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <receiver
            android:name=".push.AlarmReciver"
            android:enabled="true">
        </receiver>
        <service
            android:name=".push.AlarmIntentService"
            android:exported="false" />
        <activity android:name=".view.main.MainActivity" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/cloud" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/teal_200" />
    </application>

</manifest>